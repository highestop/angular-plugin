{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "downlevelIteration": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["esnext", "dom"],
    "paths": {
      "ng-plugin-demo": ["dist/ng-plugin-demo"],
      "ng-plugin-manager": ["dist/ng-plugin-manager"]
    }
  }
}
